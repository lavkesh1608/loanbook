
<% if @book.errors.any? %>
<div class="error_messages">
<h2>Form is invalid</h2>
<ul>
<% for message in @book.errors.full_messages %>
<li><%= message %></li>
<% end %>
</ul>
</div>
<%end %>
<%= form_for@book,:as=>:book ,:method=>"post" ,:url=>add_book_path do |f| %>
							
						
						<table style="margin-top: 15px;"> 
							<tr>
								<th style="text-align: left;">Add Book</th>
							</tr>
								<tr>
				<td><%=f.label :Category%>
									<div class="input_div">

	<%=f.select(:category_id,Category.all.collect{|c| [c.name,c.id] },{prompt:'Select Category'}, :onchange => "collectionSelected(this);")%>
				</div>
			</td>
			</tr>
							
			<tr>
				<td>Book Title
					<div class="input_div">
						<%=f.text_field :title ,:placeholder=>"Some text" ,:class=>"input"%>
							<%=f.hidden_field :user_id ,:value=>session[:user_id] %>
					</div>
					
				</td>
				
			</tr>
			<tr>
				<td>BooK Tag
					<div class="input_div">
						<%=f.text_field :tag, :class=>"user_name" ,:class=>"input" %>
						<div class="check"></div>
					</div>
					
				</td>
				
		</tr>
			
			<tr>
				<td>Description
					<div class="input_div">
						<%= f.text_area :description%>
						<%=f.hidden_field :status ,:value=>"Available" %>
					</div>
					
				</td>
				
			</tr>
			<tr>
				<td>Image
					<div class="input_div">
						<%= f.file_field :book_image%>
					</div>
					
				</td>
				
			</tr>
			
			<tr>
				<td>
				<%=f.submit "submit", :class=>"submit" %>
				</td>
				
			</tr>
			
			</table>
	
					
						<%end%>
